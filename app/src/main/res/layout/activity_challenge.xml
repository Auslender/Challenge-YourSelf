<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fitness_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/category_fitness"
                android:textSize="20sp"
                android:gravity="center" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/category_fitness"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:visibility="invisible" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/chores_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="@string/category_chores"
                android:textSize="20sp"
                android:gravity="center" />
            <Spinner
                android:id="@+id/category_chores"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:visibility="invisible"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/relax_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="@string/category_relax"
                android:textSize="20sp"
                android:gravity="center" />
            <Spinner
                android:id="@+id/category_relax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:visibility="invisible" />
        </FrameLayout>
        <TextView
            android:id="@+id/category_default"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/category_default"
            android:textSize="20sp"/>
    </LinearLayout>
</ScrollView>