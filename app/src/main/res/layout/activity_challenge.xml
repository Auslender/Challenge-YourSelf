<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/category_fitness"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:spinnerMode="dialog"
            app:ms_arrowSize="0dp"
            app:ms_hint="@string/category_fitness" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/category_chores"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:spinnerMode="dialog"
            app:ms_arrowSize="0dp"
            app:ms_hint="@string/category_chores" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/category_relax"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:spinnerMode="dialog"
            app:ms_arrowSize="0dp"
            app:ms_hint="@string/category_relax" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/category_default"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:spinnerMode="dialog"
            app:ms_arrowSize="0dp"
            app:ms_hint="@string/category_default" />
    </LinearLayout>
</ScrollView>